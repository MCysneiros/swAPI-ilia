    "@tanstack/react-query-devtools": "^5.56.2",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "next": "15.0.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0-rc.1",
    "react-dom": "^19.0.0-rc.1",
    "react-hook-form": "^7.53.0",
    "sonner": "^1.5.0",
